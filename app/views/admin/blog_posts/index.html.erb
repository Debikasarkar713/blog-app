<h1>ALL BLOG POSTS</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @blog_posts.each do |blog_post| %>
    <tr>
      <td><%= blog_post.title %></td>
      <td><%= blog_post.excerpt %></td>
      <td><%= link_to 'Show', blog_post_path(blog_post) %></td>
    </tr>
  <% end %>
</table>