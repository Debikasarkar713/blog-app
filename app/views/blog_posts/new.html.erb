
<h1>New Blog Post</h1>
<%= form_with scope: :blog_post, url: blog_posts_path, local: true do |form| %>
<p> 
    <%= form.label :title %><br>
    <%= form.text_field :title %>
</p>

<p> 
    <%= form.label :content %><br>
    <%= form.text_area :content %>
</p>

<p>
    <%= form.submit %>
</p>
<% end %>

